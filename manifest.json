


{
  "manifest_version": 3,
  "name": "JADE - JavaScript Advanced Domain Enforcer",
  "version": "1.0.0",
  "description": "Policy-driven control of JavaScript operational capabilities in the browser",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs",
    "webRequest"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "JADE Controls"
  },
  "options_page": "options/options.html",
  "web_accessible_resources": [
    {
      "resources": ["inject.js", "dashboard/dashboard.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ]
}